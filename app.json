{
  "name": "PeerTube",
  "description": "Federated (ActivityPub) video streaming platform using P2P directly in the web browser with WebRTC and Angular.",
  "website": "https://joinpeertube.org",
  "repository": "https://github.com/Chocobozzz/PeerTube",
  "logo": "https://upload.wikimedia.org/wikipedia/commons/2/2b/Logo_de_PeerTube.svg",
  "success_url": "/",
  "keywords": [
    "peertube",
    "activitypub",
    "streaming"
  ],
  "addons": [
    "heroku-redis",
    {
      "plan": "heroku-postgresql",
      "options": {
        "name": "peertube",
        "user": "peertube",
        "password": "peertube"
      }
    }
  ],
  "scripts": {
    "postdeploy": "psql $DATABASE_URL -c \"CREATE EXTENSION pg_trgm; CREATE EXTENSION unaccent;\"; npm run build; npm run start"
  },
  "buildpacks": [
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    }
  ]
}
